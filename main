# Function to parse assignment statement
function parse_assignment(input)
    assignment_pattern = r"([a-zA-Z_][a-zA-Z0-9_]*)\s*=\s*(0|[1-9][0-9]*)\s*;"
    
    m = match(assignment_pattern, input)
    if m === nothing
        return nothing
    end
    
    variable = m.captures[1]
    value = m.captures[2]
    
    if value != "0" && startswith(value, "0")
        println("Error: Variable $variable has leading zeros.")
        return nothing
    end
    
    return (variable, value)
end



# Function to interpret the whole program
function interpret_program(program)
    lines = split(program, "\n")
    assignments = []
    variables = Dict()
    
    for line in lines
        assignment = parse_assignment(line)
        if assignment !== nothing
            push!(assignments, assignment)
        else
            println("Syntax error at: $line")
            return
        end
    end
    
    for assignment in assignments
        interpret_assignment(assignment, variables)
    end
    
    for (var, val) in pairs(variables)
        println("$var = $val")
    end
end

# Sample inputs
inputs = [
    "x = 001;",
    "x_2 = 0;",
    "x = 0\ny = x;\nz = ---(x+y);",
    "x = 1;\ny = 2;\nz = ---(x+y)*(x+-y);"
]

